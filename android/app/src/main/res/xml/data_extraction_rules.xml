<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data in cloud backups -->
        <include domain="database" path="."/>
        <include domain="sharedpref" path="."/>
        <include domain="file" path="documents/"/>
        <include domain="file" path="exports/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include app data in device transfers -->
        <include domain="database" path="."/>
        <include domain="sharedpref" path="."/>
        <include domain="file" path="documents/"/>
        <include domain="file" path="exports/"/>
    </device-transfer>
</data-extraction-rules> 